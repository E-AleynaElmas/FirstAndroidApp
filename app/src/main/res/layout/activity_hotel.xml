<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    tools:context=".HotelActivity">

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loadMainPage"
        android:text="Anasayfa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/hotelImage1"
        android:layout_width="176dp"
        android:layout_height="172dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/otel1" />

    <TextView
        android:id="@+id/hotelHeader"
        android:layout_width="161dp"
        android:layout_height="46dp"
        android:layout_marginTop="50dp"
        android:text="City Loft"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hotelImage1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/hotelImage2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelImage1"
        app:srcCompat="@drawable/oda" />

    <ImageView
        android:id="@+id/hotelImage3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/hotelImage4"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/hotelImage2"
        app:layout_constraintTop_toBottomOf="@+id/hotelImage1"
        app:srcCompat="@drawable/restoran1" />

    <ImageView
        android:id="@+id/hotelImage4"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelImage1"
        app:srcCompat="@drawable/havuz" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Fiyat: "
        android:textColor="@color/purple_700"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelImage2" />

    <TextView
        android:id="@+id/hotelCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="250TL"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/hotelImage2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Konum: "
        android:textColor="@color/purple_700"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/hotelLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Ataşehir/İstanbul"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/hotelCost" />

    <CheckBox
        android:id="@+id/hotelAttr1"
        android:layout_width="342dp"
        android:layout_height="19dp"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:clickable="false"
        android:text="Kablosuz internet"
        android:textColorHighlight="#673AB7"
        android:textColorLink="#9C27B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelLocation" />

    <CheckBox
        android:id="@+id/hotelAttr2"
        android:layout_width="342dp"
        android:layout_height="19dp"
        android:layout_marginTop="5dp"
        android:checked="false"
        android:clickable="false"
        android:text="Kuru temizleme"
        android:textColorHighlight="#673AB7"
        android:textColorLink="#9C27B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAttr1" />

    <CheckBox
        android:id="@+id/hotelAttr3"
        android:layout_width="342dp"
        android:layout_height="19dp"
        android:layout_marginTop="5dp"
        android:checked="false"
        android:clickable="false"
        android:text="Otopark"
        android:textColorHighlight="#673AB7"
        android:textColorLink="#9C27B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAttr2" />

    <CheckBox
        android:id="@+id/hotelAttr4"
        android:layout_width="342dp"
        android:layout_height="19dp"
        android:layout_marginTop="5dp"
        android:checked="false"
        android:clickable="false"
        android:text="Restoran"
        android:textColorHighlight="#673AB7"
        android:textColorLink="#9C27B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAttr3" />

    <CheckBox
        android:id="@+id/hotelAttr5"
        android:layout_width="342dp"
        android:layout_height="19dp"
        android:layout_marginTop="5dp"
        android:checked="false"
        android:clickable="false"
        android:text="Resepsiyon hizmeti"
        android:textColorHighlight="#673AB7"
        android:textColorLink="#9C27B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAttr4" />

    <CheckBox
        android:id="@+id/hotelAttr6"
        android:layout_width="342dp"
        android:layout_height="19dp"
        android:layout_marginTop="5dp"
        android:checked="false"
        android:clickable="false"
        android:text="Çamaşırhane"
        android:textColorHighlight="#673AB7"
        android:textColorLink="#9C27B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAttr5" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:onClick="loadRezervartion"
        android:text="Rezervasyon Yap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAttr6"
        app:layout_constraintVertical_bias="0.19" />

</androidx.constraintlayout.widget.ConstraintLayout>