<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RezervationActivity">

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loadMainPage"
        android:text="Anasayfa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="İrtibat Bilgileri"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="277dp"
        android:layout_height="139dp"
        android:layout_marginTop="10dp"
        android:fadingEdge="horizontal|vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="İsim"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ContactName"
                android:layout_width="176dp"
                android:layout_height="34dp"
                android:inputType="textPersonName"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soyisim"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ContactLastName"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:inputType="textPersonName"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-posta"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ContactMail"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:inputType="textEmailAddress"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel No"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ContactPhone"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:inputType="phone"
                android:textSize="12sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Konaklayacak Kişi Bilgileri"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="274dp"
        android:layout_height="129dp"
        android:layout_marginTop="10dp"
        android:fadingEdge="horizontal|vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="İsim"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/PersonName"
                android:layout_width="174dp"
                android:layout_height="34dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soyisim"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/PersonLastName"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TC No"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/PersonTC"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:ems="10"
                android:inputType="number"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel No"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/PersonPhone"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:ems="10"
                android:inputType="phone"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ContactPhone"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="0999 999 99 99"
                android:textSize="12sp" />
        </TableRow>
    </TableLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Özel istekte bulunmak istiyorum." />

        <EditText
            android:id="@+id/wishText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="12sp"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Özel istekte bulunmak istemiyorum." />
    </RadioGroup>

    <Button
        android:id="@+id/button2"
        android:layout_width="132dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:onClick="addHotelToDB"
        android:text="Onay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>