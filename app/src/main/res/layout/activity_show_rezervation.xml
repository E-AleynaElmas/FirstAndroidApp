<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowRezervation">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X OTEL"
        android:textColor="#9C27B0"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameSurname"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:text="Konaklayacak Kişi İsim ve Soyisim"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/xNameSurname"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/xNameSurname"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:editable="true"
        android:inputType="none"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:text="Giriş Tarihi"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/xCheckInDate"
        app:layout_constraintTop_toBottomOf="@+id/nameSurname" />

    <EditText
        android:id="@+id/xCheckInDate"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:editable="true"
        android:inputType="none"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xNameSurname" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:text="Çıkış Tarihi"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/xCheckOutDate"
        app:layout_constraintTop_toBottomOf="@+id/textView35" />

    <EditText
        android:id="@+id/xCheckOutDate"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:editable="true"
        android:inputType="none"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xCheckInDate" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:text="Kişi Sayısı"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/xPersonNumber"
        app:layout_constraintTop_toBottomOf="@+id/textView36" />

    <EditText
        android:id="@+id/xPersonNumber"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:editable="true"
        android:inputType="none"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xCheckOutDate" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:text="Çocuk Sayısı"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/xPersonNumber"
        app:layout_constraintTop_toBottomOf="@+id/textView37" />

    <EditText
        android:id="@+id/xChildNumber"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:editable="true"
        android:inputType="none"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xPersonNumber" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:text="İrtibat E-Posta"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/xPersonNumber"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <EditText
        android:id="@+id/xEPosta"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:editable="true"
        android:inputType="none"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xChildNumber" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:text="İrtibat No"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/xPersonNumber"
        app:layout_constraintTop_toBottomOf="@+id/textView38" />

    <EditText
        android:id="@+id/xNo"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:editable="true"
        android:inputType="none"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xEPosta" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:text="(.)Kişi İsim ve Soyisim"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/xPersonNumber"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <EditText
        android:id="@+id/xPersonNameSurname"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:editable="true"
        android:inputType="none"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xNo" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:text="(.)Kişi TC"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/xPersonNumber"
        app:layout_constraintTop_toBottomOf="@+id/textView39" />

    <EditText
        android:id="@+id/xPersonTC"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:editable="true"
        android:inputType="none"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xPersonNameSurname" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:text="(.)Kişi No"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/xPersonNumber"
        app:layout_constraintTop_toBottomOf="@+id/textView40" />

    <EditText
        android:id="@+id/xPersonNo"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:editable="true"
        android:inputType="none"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xPersonTC" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anasayfa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#B896BD"
        android:onClick="setDisable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView41"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="130dp"
        android:backgroundTint="#B896BD"
        android:onClick="setEnable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xPersonNo"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>